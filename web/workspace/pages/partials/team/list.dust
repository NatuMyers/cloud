<div class="col w-1-4 bs-w-1-2">
  <a href="/{lang}/team/{slug}" class="box box--natural mb bd bd-grey">
    {?image}
      <img src="{global.cdn.publicUrl}{image[0].path}?q=60&w=585" alt="Photo of {name}" class="fill block">
    {/image}

    <div class="box__caption bg-dark color-white">
      <h2 class="normal truncate">{name}</h2>
      <p class="color-tint truncate">{role}</p>
    </div>
  </a>
</div>